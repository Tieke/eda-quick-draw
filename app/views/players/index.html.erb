
	<div class="animated fadeInLeft pure-g">
		<img id="logo index-title" class="logo"  src="assets/quick-draw-logo.png">
	</div>


	<div  class="animated fadeInRight">
		<table class="pure-table">
		    <thead class="table-head">
		        <tr>
		            <th>#</th>
		            <th>Player Name</th>
		            <th>Score</th>
		        </tr>
		    </thead>

		    <tbody>
				<% @top_10_players.each do |player| %>
				<% i = 1 %>
		      <tr>
		        <td><%= i %></td>
		        <td><%= player[0] %></td>
		        <td><%= player[1] %></td>
		      </tr>
				<% i += 1 %>
				<% end %>
		    </tbody>
		</table>

		<div class="pure-g">
			<div class="button-holder">
				<%= button_to "start the game!", game_path, method: :get, class: 'pure-u-1-1 button-xlarge pure-button'  %>
				<%= button_to 'sign out', destroy_player_session_path, method: :delete, class: 'pure-u-1-1 button-xlarge pure-button'  %>
			</div>
		</div>
	</div>
  
	<script src="assets/logo.js"></script>
	<script src="assets/jquery.smoothState.js"></script>
	<script src="assets/players.js"></script>

